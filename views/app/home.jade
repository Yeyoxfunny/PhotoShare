extends ../layout
block content
    include ./layoutNavbar
    .container.m-top-space
        -var longitud = images.length;
        -var posicion = 0;
        -while(longitud > 0)
          .row
            -for(var i=0; i<3 && posicion < images.length; i++, posicion++, longitud--)
                .col.m4.s12
                  .card
                      .card-image.waves-effect.waves-block.waves-light
                        img.activator.view-image(src='#{images[posicion].urlImage}')
                        //img.activator(src='#{}')
                      .card-content
                        span.card-title.activator.grey-text.text-darken-4 #{images[posicion].title}
                          i.material-icons.right more_vert
                        .row
                          .col.s12.view-image__options
                            a(href='/app/imagenes/#{images[posicion]._id}') #[i.material-icons.small mode_edit]
                            a.icon-facebook-alt.color-facebook.view-image__social(href='#')
                            a.icon-twitter.color-twitter.view-image__social(href='#')
                            a.icon-gplus-circled.color-googleplus.view-image__social(href='#')
                            a.icon-instagrem.color-instagram.view-image__social(href='#')
                      .card-reveal
                        span.card-title.grey-text.text-darken-4 #{images[posicion].title}
                          i.material-icons.right close
                        p #{images[posicion].description}
                
      .fixed-action-btn(style="bottom: 45px; right: 24px;")
        a.btn-floating.btn-large.waves-effect.waves-light.red(href='/app/new')
          i.material-icons publish
block scripts
  script 
    $(".button-collapse").sideNav();
