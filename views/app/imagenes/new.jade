extends ../../layout.jade
block content
    include ../layoutNavbar
    .container.m-medium-top-space
      .row
        .col.m10.offset-m1.z-depth-1.white.login-form
          .row
            header.col.s12.bg-bluewood
              h4.center.white-text.main(style="font-family: 'Arial Black'") Insertar Imagen
            form.col.s12.m10.offset-m1(action='/app/imagenes' method='post' enctype='multipart/form-data')
              input(type='hidden' value='#{user._id}' name='user')
              .row.m-top-space
                .col.s12.input-field
                  i.material-icons.prefix mode_edit
                  input#title.validate(type="text" name='title')
                  label(for="title") Título
                .col.s12.input-field
                  i.material-icons.prefix mode_edit
                  textarea#description.materialize-textarea(name='description')
                  label(for="description") Descripción
                .col.s12
                  .file-field.input-field
                    .btn
                      span File
                      input#fileUpload(type='file' name='image_file')
                    .file-path-wrapper
                      input#txtFile.file-path.validate(type='text')
                    .col.s12.m-top-space.image-preview-file
                      img#imgPreview.responsive-img(src='/images/imagepreview.png')
                  button.btn.waves-effect.waves-light.col.s3.offset-s9.m-top-space(type="submit" name="action") Enviar
                    i.material-icons.right send
block scripts
  script(src='/javascripts/main.js')
  script
    $(".button-collapse").sideNav();
